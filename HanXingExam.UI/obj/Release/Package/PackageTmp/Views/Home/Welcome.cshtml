        <script>
            //时间设置
            var d = new Date(), str = '';
            str += d.getFullYear() + '年';
            str += d.getMonth() + 1 + '月';
            str += d.getDate() + '日';
            str += d.getHours() + '时';
            str += d.getMinutes() + '分';
            $("#nowIP").html(" , 您本次登陆时间为" + str + "，登陆IP: " + returnCitySN.cip);

            //学院
            $.ajax({
                url: "/Users/GetColleges",
                type: "post",
                dataType: "json",
                success: function (data) {
                    for (var i = 0; i < data.length; i++) {
                        var op = '<option value="' + data[i].CollegeId + '">' + data[i].CollegeName + '</option>'
                        $("[name=collegeId]").append(op);
                    }
                }
            })

            //专业
            $("[name=collegeId]").change(function () {
                $.ajax({
                    url: "/Users/GetMajorsByCollegeId?CollegeId=" + $("[name=collegeId]").val(),
                    type: "post",
                    dataType: "json",
                    success: function (data) {
                        $("[name=mjorId]").empty();
                        $("[name=mjorId]").append('<option value="0">--专业--</option>');
                        for (var i = 0; i < data.length; i++) {
                            var op = '<option value="' + data[i].MajorId + '">' + data[i].MajorName + '</option>'
                            $("[name=mjorId]").append(op);
                        }
                    }
                })
            })

            //阶段
            $("[name=mjorId]").change(function () {
                $.ajax({
                    url: "/Users/GetStages?MajorId=" + $("[name=mjorId]").val(),
                    type: "post",
                    async: false,
                    dataType: "json",
                    success: function (data) {
                        $("[name=stageId]").empty();
                        $("[name=stageId]").append('<option value="0">--阶段--</option>');
                        for (var i = 0; i < data.length; i++) {
                            var op = '<option value="' + data[i].StageId + '">' + data[i].StageName + '</option>'
                            $("[name=stageId]").append(op);
                        }
                    }
                })
            })

            layui.use(['laydate', 'element', 'laypage', 'layer', 'upload'], function () {
                $ = layui.jquery;
                laydate = layui.laydate;//日期插件
                lement = layui.element();//面包导航
                laypage = layui.laypage;//分页
                layer = layui.layer;//弹出层


                var start = {
                    min: '1999-01-01 00:00:00'
                    , max: '2099-06-16 23:59:59'
                    , istoday: false
                    , choose: function (datas) {
                        end.min = datas; //开始日选好后，重置结束日的最小日期
                        end.start = datas //将结束日的初始值设定为开始日
                    }
                };

                document.getElementById('LAY_demorange_s').onclick = function () {
                    start.elem = this;
                    laydate(start);
                }
            })
        </script>

        @*柱状图*@
        <script type="text/javascript">
            $("#sel").click(function () {
                show();
            })

            var myChart = echarts.init(document.getElementById('main'));

            // 显示标题，图例和空的坐标轴
            myChart.setOption({
                color: ['#3398DB'],
                title: {
                    text: '成材率柱状图'
                },
                tooltip: {
                    trigger: 'axis',
                    axisPointer: {
                        type: 'shadow'
                    }
                },
                grid: {
                    left: '3%',
                    right: '4%',
                    bottom: '3%',
                    containLabel: true
                },
                toolbox: {
                    show: true,
                    feature: {
                        mark: { show: true },
                        dataView: { show: true, readOnly: false },
                        magicType: {
                            show: true,
                            type: ['pie', 'funnel']
                        },
                        restore: { show: true },
                        saveAsImage: { show: true }
                    }
                },
                xAxis: [{
                    type: 'category',
                    data: [],
                    axisTick: {
                        alignWithLabel: true
                    }
                }],
                yAxis: {
                    type: 'value',
                },
                series: [{
                    name: '成材率',
                    type: 'bar',
                    barWidth: '60%',
                    data: []
                }]
            });

            myChart.showLoading();    //数据加载完之前先显示一段简单的loading动画
            show();
            var names = [];    //类别数组（实际用来盛放X轴坐标值）
            var nums = [];    //销量数组（实际用来盛放Y坐标值）
            function show() {
                names = [];
                nums = [];
                $.ajax({
                    type: "post",
                    async: true, //异步请求（同步请求将会锁住浏览器，用户其他操作必须等待请求完成才可以执行）
                    url: "/ExamQuestion/GetAnalysis",    //请求发送到TestServlet处
                    data: {
                        startDate: $("#LAY_demorange_s").val(),
                        CollegeId: $("[name=collegeId]").val(),
                        MajorId: $("[name=mjorId]").val(),
                        StageId: $("[name=stageId]").val(),
                    },
                    dataType: "json", //返回数据形式为json
                    success: function (result) {
                        console.log(result);
                        //请求成功时执行该函数内容，result即为服务器返回的json对象
                        if (result) {
                            for (var i = 0; i < result.length; i++) {
                                names.push(result[i].Name);    //挨个取出类别并填入类别数组
                            }
                            for (var i = 0; i < result.length; i++) {
                                nums.push(result[i].Yie);    //挨个取出销量并填入销量数组
                            }
                            myChart.hideLoading();    //隐藏加载动画
                            myChart.setOption({        //加载数据图表
                                xAxis: {
                                    data: names
                                },
                                series: [{
                                    // 根据名字对应到相应的系列
                                    name: '成材率',
                                    data: nums
                                }]
                            });
                        }
                    },
                    error: function (errorMsg) {
                        //请求失败时执行该函数
                        alert("图表请求数据失败!");
                        myChart.hideLoading();
                    }
                })
            }
        </script>

