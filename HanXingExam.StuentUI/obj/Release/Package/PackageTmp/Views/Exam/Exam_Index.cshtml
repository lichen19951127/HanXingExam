                console.log($(this).prop("checked"));
                if (!$(this).prop("checked")) {
                    f += 1;
                }
                else {
                    t += 1;
                }
            })
            if (t > 0) {
                cardLi.addClass('hasBeenAnswer');
            }
            else {
                // 设置已答题
                cardLi.removeClass('hasBeenAnswer');
            }
        }
